@model IEnumerable<QLThuVIen.Models.THELOAI>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                color: black;
                transition: 0.5s ease-in-out;
            }

        button {
            padding: 5px;
            border-radius: 10px;
        }

        .edit {
            color: green;
        }

        .detail {
            color: blue;
        }

        .delete {
            color: red;
        }
    </style>
</head>
<body>
    <div style=" background: #FFFFFF; border-radius:10px; padding:1rem;">
        <h2 style="">QUẢN LÝ THỂ LOẠI</h2>
        <p>
            <button> @Html.ActionLink("Thêm thể loại mới", "Create")</button>
        </p>
        <table class="table table-bordered table-sm" style="border-width:thick">
            <thead class="thead-dark" style="background:black;color:snow; text-align:CENTER">
                <tr style="text-align:center;">
                <tr>
                    <th>
                        ID Thể loại
                    </th>
                    <th>
                        Tên thể loại
                    </th>
                    <th>
                        Hành động
                    </th>
                </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr style="text-align:center">
                        <td>
                            @Html.DisplayFor(modelItem => item.IDTL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TENTL)
                        </td>
                        <td>
                            <button>
                                @Html.ActionLink("Edit", "Edit", new { id = item.IDTL }, new { @class = "edit" })
                            </button>
                            <button>
                                @Html.ActionLink("Details", "Details", new { id = item.IDTL }, new { @class = "detail" })
                            </button>
                            <button>
                                @Html.ActionLink("Delete", "Delete", new { id = item.IDTL }, new { @class = "delete" })
                            </button>
</tr>
                }
        </table>
        </div>
</body>
</html>
