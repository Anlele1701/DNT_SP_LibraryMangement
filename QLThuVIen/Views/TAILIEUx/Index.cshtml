@model IEnumerable<QLThuVIen.Models.TAILIEU>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                color: black;
                transition: 0.5s ease-in-out;
            }

        button {
            padding: 5px;
            border-radius: 10px;
        }

        .edit {
            color: green;
        }

        .detail {
            color: blue;
        }

        .delete {
            color: red;
        }
    </style>
</head>
<body>
    <div style=" background: #FFFFFF; border-radius:10px; padding:1rem;">
        <h2 style="">QUẢN LÝ TÀI LIỆU</h2>
        <p>
            <button> @Html.ActionLink("Thêm tài liệu mới", "Create")</button>
        </p>
        <table class="table table-bordered table-sm" style="border-width:thick">
            <thead class="thead-dark" style="background:black;color:snow; text-align:center">
                <tr style="text-align:center;">
                <tr>
                    <th>
                        ID Tài liệu
                    </th>
                    <th>Hình ảnh</th>
                    <th>
                        Tên tài liệu
                    </th>
                    <th>
                        Tác giả
                    </th>
                    <th>
                        Nhà xuất bản
                    </th>
                    <th>
                        Thể loại
                    </th>
                    <th>
                        Hành động
                    </th>
                </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr style="text-align: center;  text-align: center; vertical-align: middle; ">
                        <td>
                            @Html.DisplayFor(modelItem => item.IDTL)
                        </td>
                        <td>
                            <img src="~/Images/TL/@item.HINHANH" style="max-width:100px" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TENTAILIEU)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TACGIA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NHAXB.TENNHAXB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.THELOAI.TENTL)
                        </td>
                        <td>
                            <button>
                                @Html.ActionLink("Edit", "Edit", new { id = item.IDTL }, new { @class = "edit" })
                            </button>
                            <button>
                                @Html.ActionLink("Details", "Details", new { id = item.IDTL }, new { @class = "detail" })
                            </button>
                            <button>
                                @Html.ActionLink("Delete", "Delete", new { id = item.IDTL }, new { @class = "delete" })
                            </button>
                        </td>
                    </tr>
                }

        </table>
        </div>
</body>
</html>
